local TweenService = game:GetService("TweenService")
local player = game.Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local function GetCharacter()
    local character = player.Character or player.CharacterAdded:Wait()
    return character
end

local function ApplyFlight(character, fixedY)
    local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
    if humanoidRootPart then
        -- üî• Gi·ªØ nh√¢n v·∫≠t l∆° l·ª≠ng b·∫±ng BodyVelocity
        local bodyGyro = Instance.new("BodyGyro")
        bodyGyro.MaxTorque = Vector3.new(math.huge, math.huge, math.huge)
        bodyGyro.CFrame = humanoidRootPart.CFrame
        bodyGyro.Parent = humanoidRootPart

        local bodyVelocity = Instance.new("BodyVelocity")
        bodyVelocity.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
        bodyVelocity.Velocity = Vector3.new(0, 0.1, 0) -- Nh·ªè ƒë·ªÉ gi·ªØ nh√¢n v·∫≠t tr√™n kh√¥ng
        bodyVelocity.Parent = humanoidRootPart

        humanoidRootPart.Anchored = false -- ƒê·∫£m b·∫£o kh√¥ng b·ªã c·ªë ƒë·ªãnh c·ª©ng
    end
end

local function EnableNoclip(character)
    for _, part in pairs(character:GetChildren()) do
        if part:IsA("BasePart") then
            part.CanCollide = false
        end
    end
end

local function DisableNoclip(character)
    for _, part in pairs(character:GetChildren()) do
        if part:IsA("BasePart") then
            part.CanCollide = true
        end
    end
end

local function OnCharacterAdded(character)
    local level = player.Data.Level.Value  
    local NameQuest, LevelQ, CFT, CFQ, Ms

    -- üìå X√°c ƒë·ªãnh nhi·ªám v·ª• theo c·∫•p ƒë·ªô
    if level >= 1 and level <= 9 then
        NameQuest = "BanditQuest1"
        LevelQ = 1
        CFT = {CFrame.new(943, 40, 1562), CFrame.new(1115, 40, 1619), CFrame.new(1265.79199, 40, 1592.849)}
        CFQ = CFrame.new(1050, 16, 1540)  
        Ms = "Bandit"
    elseif level >= 10 and level <= 14 then
        NameQuest = "JungleQuest"
        LevelQ = 1
        CFT = {CFrame.new(-1673.04834, 30, -73.7299271), CFrame.new(-1570.29041, 30, 339.327484), CFrame.new(-1552.57837, 30, 22.7689781)}
        CFQ = CFrame.new(-1600, 36, 150)  
        Ms = "Monkey"
    elseif level >= 15 and level <= 29 then
        NameQuest = "JungleQuest"
        LevelQ = 2
        CFT = {CFrame.new(-1281.31323, 20, -509.142456), CFrame.new(-1216.53259, 20, -586.503235)}
        CFQ = CFrame.new(-1600, 36, 150)  
        Ms = "Gorilla"
    elseif level >= 30 and level <= 39 then
        NameQuest = "BuggyQuest1"
        LevelQ = 1
        CFT = {CFrame.new(-1160.14258, 18, 3929.40723), CFrame.new(-1264.62415, 18, 3903.80957), CFrame.new(-943.844299, 30, 3973.2478)}
        CFQ = CFrame.new(-1130, 4, 3820)  
        Ms = "Pirate"
    elseif level >= 40 and level <= 59 then
        NameQuest = "BuggyQuest1"
        LevelQ = 2
        CFT = {CFrame.new(-1204.29492, 30, 4286.92773), CFrame.new(-962.269287, 30, 4312.79834), CFrame.new(-1333.89319, 30, 4227.29639)}
        CFQ = CFrame.new(-1140.176, 4.752, 3827.405)  
        Ms = "Brute"
    end

    -- üìå Gi·ªØ nh√¢n v·∫≠t ·ªü tr√™n kh√¥ng trung theo danh s√°ch CFT
    local fixedY = CFT[1].Y + 10
    ApplyFlight(character, fixedY)

    function TweenToPosition(character, targetPosition)
        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
        if humanoidRootPart then
            local currentPosition = humanoidRootPart.Position
            if (currentPosition - targetPosition).magnitude > 3 then -- Ch·ªâ tween n·∫øu v·ªã tr√≠ thay ƒë·ªïi
                EnableNoclip(character) -- üî• B·∫≠t Noclip tr∆∞·ªõc khi Tween
                local targetCFrame = CFrame.new(targetPosition.X, fixedY, targetPosition.Z) -- Gi·ªØ Y c·ªë ƒë·ªãnh
                local tween = TweenService:Create(
                    humanoidRootPart,
                    TweenInfo.new(3, Enum.EasingStyle.Linear, Enum.EasingDirection.Out),
                    {CFrame = targetCFrame}
                )
                tween:Play()
                tween.Completed:Wait()
                DisableNoclip(character) -- ‚ùå T·∫Øt Noclip sau khi Tween xong
            end
        end
    end

    function GatherMobs()
        for _, mob in pairs(game.Workspace.Enemies:GetChildren()) do
            if mob.Name == Ms and mob:FindFirstChild("HumanoidRootPart") then
                local targetPosition = CFT[1].Position
                if targetPosition then
                    local targetCFrame = CFrame.new(targetPosition.X, mob.HumanoidRootPart.Position.Y, targetPosition.Z)

                    -- üõ†Ô∏è G·ª° Anchored tr∆∞·ªõc khi gom qu√°i
                    mob.HumanoidRootPart.Anchored = false

                    local tween = TweenService:Create(
                        mob.HumanoidRootPart,
                        TweenInfo.new(0.2, Enum.EasingStyle.Linear, Enum.EasingDirection.Out),
                        {CFrame = targetCFrame}
                    )
                    tween:Play()
                    tween.Completed:Wait()
                end
            end
        end
    end

    function AllMobsDead()
        for _, mob in pairs(game.Workspace.Enemies:GetChildren()) do
            if mob.Name == Ms then
                return false
            end
        end
        return true
    end

    function MoveThroughPoints(character)
        for _, targetPosition in ipairs(CFT) do
            TweenToPosition(character, targetPosition.Position)
            task.wait(1)
            GatherMobs()
            while not AllMobsDead() do
                task.wait(0.2)
            end
        end
    end

    MoveThroughPoints(character)
end

player.CharacterAdded:Connect(OnCharacterAdded)
OnCharacterAdded(GetCharacter())
